<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
</head>
<body>
    <%- include("partials/header.ejs") %>

    <div class="box" id="heading">
        <h1 >Work List</h1>
    </div>
    <div class="box">
        <ul>
            <% newWorkItems.forEach(function(work){ %>
                <form action="/deleteWork" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= work._id %>" onchange="this.form.submit()">
                        <p><%= work.name %></p>
                    </div>
                </form>
            <% }) %>
            <form class="item" action="/work" method="post">
                <input type="text" name="item" placeholder="New Item" autocomplete="off">
                <button type="submit">+</button>
            </form>
        </ul>
    </div>
    
    <%- include("partials/footer.ejs") %>
</body>
</html>